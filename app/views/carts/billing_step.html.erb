<%= render 'shared/progress_bar' %>

<div class="form-view" style='margin-top: 80px;'>
	<%= simple_form_for(@payment_method, url: billing_update_path) do |f| %>
	  <% if @payment_method.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@payment_method.errors.count, "error") %> prohibited this payment_method from being saved:</h2>

	      <ul>
	      <% @payment_method.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
  
	  <%= f.hidden_field :stripe_card_token %>
  
	  <div class="field">
	      <%= label_tag :card_number, "Credit Card Number " %><br />
	      <%= text_field_tag :card_number, nil, name: nil %>
	  </div>
	  <br />
	  <div class="field">
	      <%= label_tag :card_code, "Security Code on Card (CVV)" %><br />
	      <%= text_field_tag :card_code, nil, name: nil %>
	  </div>
	  <br />
	  <div class="field">
	    <%= label_tag :card_month, "Card Expiration" %><br />
	    <%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%>
	    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%>
	  </div>
	  
	  <br /><br />
	  <div class="actions">
	    <%= f.submit "Continue", class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>