<%= render 'shared/progress_bar' %>

<div class="form-view" style="font-family: 'Source Sans Pro', sans-serif; font-weight: bold; margin-top: 20px; margin-bottom: 50px; width: 440px;">
	<%= simple_form_for(@address, url: address_update_path) do |f| %>
	  <% if @address.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

	      <ul>
	      <% @address.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :first_name %><br>
	    <%= f.text_field :first_name %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :last_name %><br>
	    <%= f.text_field :last_name %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :line_1, "* Address" %><br>
	    <%= f.text_field :line_1 %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :line_2, "Apt" %><br>
	    <%= f.text_field :line_2 %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :city %><br>
	    <%= f.text_field :city %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :state %><br>
	    <%= f.text_field :state %>
	  </div>
	  <div class="field" style="float: left; margin: 10px; width: 200px;">
	    <%= f.label :zip %><br>
	    <%= f.text_field :zip %>
	  </div>
	  <%= f.hidden_field :default, value: true %>
	  <br /><br /><br /><br />
	  <div class="actions" style="clear: both; margin: 245px auto 20px auto; width: 200px; ">
	    <%= f.submit "Continue", class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>