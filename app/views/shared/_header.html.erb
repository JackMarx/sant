<% current_uri = request.env['PATH_INFO'] %>

<nav class="navbar navbar-default" role="navigation" style="background-color: white;">

  <div class="container-fluid sant-header desktop">
	
		<ul class="nav navbar-nav navbar-left">
			<li><%= link_to "Shop Sant", products_url %></li>
			<li><%= link_to "Sant Recipes", recipes_path %></li>
		</ul>
	
		<div>
			<%= link_to image_tag("sant-logo.png", class: 'header-logo'), root_url %>
		</div>

		<ul class="nav navbar-nav navbar-right">
			<li><%= link_to "Kickstarter", "https://www.kickstarter.com/projects/sant-superfruitdrink/sant-dried-superfruit-infuses-into-a-fresh-beverag", target: "_blank" %></li>
			<li><%= link_to "About", about_url %></li>
			<li><%= link_to "My Sant", "", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
				<ul class="dropdown-menu">
					<% if signed_in? %>
						<% customer = current_user.customer %>
						<% if customer.orders.present? %>
							<li><%= link_to "Orders", orders_path, class: 'sant-dropdown' %></li>
						<% end %>
						<% if current_user.has_role? :admin %>
							<li><%= link_to "Admin", admin_root_path, class: 'sant-dropdown' %></li>
						<% end %>
						<li><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'sant-dropdown' %></li>
					<% else %>
						<li><%= link_to "Sign In", new_user_session_path, class: 'sant-dropdown' %></li>
						<li><%= link_to "Create Account", new_user_registration_path, class: 'sant-dropdown' %></li>
						<li><%= link_to "Help", new_support_request_path, class: 'sant-dropdown' %></li>
					<% end %>
				</ul>
			</li>
		</ul>
		<% if session[:cart_id].present? || (signed_in? && current_user.customer.cart.cart_selections.present?) %>
			<% if current_uri == "/" || current_uri == "" %>
				<span class="checkout-tab-home">
			<% else %>
				<span class="checkout-tab">
			<% end %>
			<% if session[:cart_id].present? && Cart.where(id: session[:cart_id]).present? %>
				<%= link_to "Cart ( #{Cart.find(session[:cart_id]).items} )", customer_cart_url %>
			<% elsif signed_in? && current_user.customer.cart.cart_selections.present? %>
				<%= link_to "Cart ( #{current_user.customer.cart.items} )", customer_cart_url %>
			<% end %>
			</span>
		<% end %>
  </div>
  
  <div class="container-fluid sant-header-mobile tablet-mobile">
  
	<!-- Brand and toggle get grouped for better mobile display -->
	<div class="navbar-header" style="height: 63px;">
	  <button type="button" class="navbar-toggle collapsed sant-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	    <span class="sr-only">Toggle navigation</span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	  </button>
	</div>

	<div>
		<%= link_to image_tag("sant-logo.png", class: 'header-logo-mobile'), root_url %>
	</div>

	<!-- Collect the nav links, forms, and other content for toggling -->
	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="text-align: center;">
	  <ul class="nav navbar-nav">
	  
	  </ul>
	  <ul class="nav navbar-nav navbar-right" style="background-color: white;">
		<li><%= link_to "About", about_url %></li>
		<li><%= link_to "Shop Sant", products_url %></li>
		<% if current_uri != "/products" %>
			<li><%= link_to "Kickstarter", "https://www.kickstarter.com/projects/sant-superfruitdrink/sant-dried-superfruit-infuses-into-a-fresh-beverag", target: "_blank" %></li>
		<% end %>
		<li><%= link_to "Sant Recipes", recipes_path %></li>
	  </ul>
	</div><!-- /.navbar-collapse -->

  </div><!-- /.container-fluid -->
	
</nav>